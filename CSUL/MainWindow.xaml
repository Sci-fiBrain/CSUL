<Window x:Class="CSUL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ec="clr-namespace:CSUL.ExControls"
        xmlns:local="clr-namespace:CSUL"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow"
        Height="650" Width="1200">
    <Grid>
        <Border>
            <Grid>
                <Grid.Background>
                    <ImageBrush ImageSource="Resources/Imgs/back_image.png">
                    </ImageBrush>
                </Grid.Background>
                <Grid.Effect>
                    <BlurEffect Radius="10" KernelType="Gaussian"/>
                </Grid.Effect>
            </Grid>
        </Border>
        <Border MouseMove="Border_MouseMove" Background="Transparent">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="82"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="{DynamicResource DefaultBrush}">
                        <Border.Effect>
                            <DropShadowEffect Color="#F2F2F2" ShadowDepth="10" BlurRadius="105" Opacity="0.4" Direction="270"/>
                        </Border.Effect>
                        <Image Margin="10" Height="60" Source="Resources/Imgs/logo2.png"/>
                    </Border>
                    <Border Grid.Row="1" Margin="0,20,0,0" Background="{DynamicResource DefaultBrush}">
                        <StackPanel>
                            <ec:CButton Icon="Resources/Imgs/logo2.png" Margin="0,10,0,0" Height="60" Width="60"/>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
